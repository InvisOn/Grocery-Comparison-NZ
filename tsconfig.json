{
  "compilerOptions": {
    "target": "ES6",                     // Set the target JavaScript version
    "module": "commonjs",                // Use CommonJS for module system
    "strict": true,                      // Enable strict type checking
    "esModuleInterop": true,             // Allow default imports from CommonJS modules
    "outDir": "./dist",                  // Directory to output compiled JavaScript files
    "rootDir": "./",                     // Root directory for source files
    "resolveJsonModule": true,           // Support importing JSON files
    "typeRoots": ["./node_modules/@types"], // Include type definitions from node_modules
    "baseUrl": "./",                     // Base URL for module resolution
    "paths": {
      "*": ["./backend/src/*", "./db/*"]             // Resolve paths for src and DB folders
      
    },
    "moduleResolution": "node",
    "types": ["node"],
    },
  "include": ["./backend/src/**/*", "./db/**/*"],    // Include files from src and DB folders
  "exclude": ["node_modules", "dist"]   // Exclude node_modules and dist folders
}
